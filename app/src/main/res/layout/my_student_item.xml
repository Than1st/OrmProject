<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_id_student"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:text="@string/_1_text"
                android:textAlignment="center"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_nama_student"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/tv_id_student"
                app:layout_constraintEnd_toStartOf="@id/btn_delete_student"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_email_student"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email"
                app:layout_constraintStart_toEndOf="@id/tv_id_student"
                app:layout_constraintEnd_toStartOf="@id/btn_delete_student"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_student"/>
            <ImageButton
                android:id="@+id/btn_delete_student"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="12dp"
                android:src="@drawable/ic_baseline_delete"
                android:background="@color/transparent"
                app:layout_constraintEnd_toStartOf="@id/btn_edit_student"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/red" />
            <ImageButton
                android:id="@+id/btn_edit_student"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="12dp"
                android:src="@drawable/ic_baseline_edit"
                android:background="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/green" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>